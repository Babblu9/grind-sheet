---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';

interface Props {
	title?: string;
	description?: string;
	showNavbar?: boolean;
	ogImage?: string;
}

const { 
	title = "GrindSheet - Master DSA & Track Contests", 
	description = "Master Data Structures & Algorithms with curated NeetCode roadmaps, track your progress, and never miss competitive programming contests from LeetCode, Codeforces, AtCoder & more.",
	showNavbar = true,
	ogImage = "/logo.png"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteUrl = Astro.site || 'https://grindsheet.vercel.app';
---
<!DOCTYPE html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content="DSA, Data Structures, Algorithms, LeetCode, Codeforces, AtCoder, NeetCode, Competitive Programming, Interview Preparation, Coding Practice" />
		<meta name="author" content="GrindSheet" />
		<meta name="theme-color" content="#0d1117" />
		
		<!-- Favicon -->
		<link rel="icon" type="image/png" href="/favicon.png" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(ogImage, siteUrl)} />
		<meta property="og:site_name" content="GrindSheet" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(ogImage, siteUrl)} />
		
		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "WebApplication",
				"name": "GrindSheet",
				"description": "Master Data Structures & Algorithms with curated roadmaps and contest tracking",
				"url": "${siteUrl}",
				"applicationCategory": "EducationalApplication",
				"offers": {
					"@type": "Offer",
					"price": "0",
					"priceCurrency": "USD"
				}
			}
		</script>
	</head>
	<body class="bg-background text-foreground font-sans antialiased text-[15px] leading-relaxed">
		{showNavbar && <Navbar />}
		<slot />
	</body>
</html>
