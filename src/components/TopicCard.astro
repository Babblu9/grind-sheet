---
interface Props {
  topic: {
    id: string;
    name: string;
    description: string;
    questions: any[];
  };
}

const { topic } = Astro.props;
const totalQuestions = topic.questions.length;
---
<div class="group border-b border-gray-100 last:border-b-0 hover:bg-gray-50 transition-colors duration-100">
  <a href={`/topics/${topic.id}`} class="flex items-center justify-between py-4 px-2">
    <div class="flex items-center gap-4">
      <span class="text-gray-900 font-medium text-[15px]">{topic.name}</span>
      <span class="text-gray-400 text-xs hidden sm:inline-block">
        {topic.description.substring(0, 60)}...
      </span>
    </div>
    <div class="flex items-center gap-4 text-sm text-gray-500 font-mono">
      <span>{totalQuestions} questions</span>
    </div>
  </a>
</div>
