---
import Layout from '../layouts/Layout.astro';
import ContestCalendar from '../components/ContestCalendar';
---

<Layout title="Contest Calendar - GrindSheet">
    <main class="max-w-[1600px] mx-auto px-4 py-8 sm:px-6">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-foreground mb-2">Contest Calendar</h1>
            <p class="text-sm text-muted-foreground/80">Track upcoming coding contests from various platforms.</p>
        </div>
        
        <ContestCalendar client:load />
    </main>
</Layout>
